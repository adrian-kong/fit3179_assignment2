{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "height": 200,
  "title": "Cumulative 2D Error [m]",
  "data": [
    {
      "async": true,
      "name": "points",
      "url": "../data/drive.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "density",
      "source": "points",
      "transform": [
        {
          "type": "density",
          "extent": {
            "signal": "domain('xscale')"
          },
          "method": "cdf",
          "distribution": {
            "function": "kde",
            "field": "EHPE \\[m\\]",
            "bandwidth": 0
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "points",
        "field": "EHPE \\[m\\]"
      },
      "nice": true
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "round": true,
      "domain": {
        "fields": [
          {
            "data": "density",
            "field": "density"
          }
        ]
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "density"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "value"
          },
          "y": {
            "scale": "yscale",
            "field": "density"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        }
      }
    },
    {
      "type": "rect",
      "from": {
        "data": "points"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "EHPE \\[m\\]"
          },
          "width": {
            "value": 1
          },
          "y": {
            "value": 25,
            "offset": {
              "signal": "height"
            }
          },
          "height": {
            "value": 5
          },
          "fill": {
            "value": "steelblue"
          },
          "fillOpacity": {
            "value": 0.4
          }
        }
      }
    }
  ]
}
